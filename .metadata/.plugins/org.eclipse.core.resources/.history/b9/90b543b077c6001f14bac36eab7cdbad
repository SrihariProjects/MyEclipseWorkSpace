package day3;

public class StringBufferDemo {

	public static void main(String[] args) {
		
		//Stringbuffers are mutable
		//It allocates by default 16bytes
		//Ti is thread safe
		
		StringBuffer sb = new StringBuffer("Srihari");
		
		System.out.println(sb.length());//7
		System.out.println(sb.capacity()); //23
		
		sb.append("Bestha");
		System.out.println(sb);
		sb.deleteCharAt(9);//we can delete some index values also
		System.out.println(sb);
		
	}

}
