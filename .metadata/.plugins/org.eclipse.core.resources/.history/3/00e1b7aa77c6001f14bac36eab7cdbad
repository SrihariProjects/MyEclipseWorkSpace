package day3;


class Mobile1{

	String brand;
	int price;
	static String name;

	//static block called only once
	//it always called first
	static {
		name="phone";
		System.out.println("I am in static");
	}
	
	//Constructor will be called when ever object is created
	
	public Mobile1(){
		brand="";
		price=900;
//		name="Phone";
		System.out.println("I am in Constructor");
	}
}


public class StaticMethods {

	public static void main(String[] args) throws Exception {
		//if we want to call the class without creating Object
		
		Class.forName("Mobile1");
		
//		Mobile1 m=new Mobile1();
		

	}

}
