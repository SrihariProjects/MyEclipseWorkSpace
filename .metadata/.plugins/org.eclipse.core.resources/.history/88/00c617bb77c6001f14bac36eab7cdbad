package day3;


class Human{

	//we can achive encapsulation using Private keyword
	// if we want to assign values then we need to use setter()
	
	private int age;
	private String name;

	//We are using readable format methods like get and set
	public int getAge() { //we can change the method names as well

		return age;

	}
	
	public void setAge(int a) {
//		age =24; //it will not take values directly
		age=a; //this is how we need to declare a variable. Set method give value and assigning here
		
	}

	public String getName() {
		return name;
	}
	
	public void setName(String n) {
		name=n;
	}

}

public class Encapsulation {

	public static void main(String[] args) {
		Human h=new Human();
		//		h.age=24;
		//		h.name="Srihari";
		
		h.setAge(24);
		h.setName("Srihari");
		
		
		System.out.println(h.getAge());
		System.out.println(h.getName());
		


	}
	
//generating getter and setters
	class DemoSetterGetter{
		
		public String getS() {
			return s;
		}
		public void setS(String s) {
			this.s = s;
		}
		public int getA() {
			return a;
		}
		public void setA(int a) {
			this.a = a;
		}
		String s;
		int a;
	}

}
